<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.hi.weiliao.user.mapper.UserAuthMapper">

    <resultMap id="UserAuth" type="com.hi.weiliao.user.bean.UserAuth">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="phone" property="phone" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="wxOpenid" property="wxOpenid" jdbcType="VARCHAR"/>
        <result column="createTime" property="createTime" jdbcType="VARCHAR"/>
        <result column="reviseTime" property="reviseTime" jdbcType="VARCHAR"/>
    </resultMap>

    <insert id="insert" parameterType="com.hi.weiliao.user.bean.UserAuth" keyProperty="id">
        insert into `USER_AUTH` (`PHONE`, `PASSWORD`, `WX_OPENID`)
        values (#{phone}, #{passWord}, #{wxOpenid})
    </insert>

    <select id="query" resultMap="UserAuth">
        select *
        from USER_AUTH
    </select>

    <select id="getByOpenid" resultMap="UserAuth" parameterType="map">
        select phone
        from USER_AUTH
        where wxOpenid = #{wxOpenid}
        limit 0, 1
    </select>

</mapper>